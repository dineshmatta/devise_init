<% content_for :nav_bar do %>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "navbar-form pull-right"}) do |f| %>
	  <%= f.email_field :email, :placeholder=>"Email", :class=>"span2" %>

	  <%= f.password_field :password, :placeholder=>"password", :class=>"span2" %>

	  <% if devise_mapping.rememberable? -%>
	    <%#= f.check_box :remember_me, :class=>"span2" %> <%#= f.label :remember_me, :class=>"span2" %>
	  <% end -%>

	  <%= f.submit "Sign in", :class=>"btn" %>
	  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  		<%= link_to "Sign up", new_registration_path(resource_name), :class=>"btn" %><br />
		<% end -%>
	<% end %>
<%end%>
<%= link_to image_tag "gmail-login.png" , :size => "160x100", :class=>"img-polaroid",:style=>"padding:48px"%>
<%#= image_tag "facebook-login.png" , :class=>"img-circle"%>
<%= link_to image_tag "twitter-login.png" , :size => "160x100", :class=>"img-polaroid",:style=>"padding:48px"%>
